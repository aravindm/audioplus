<h1>Clients</h1>
<table class="table table-striped">
  <thead>
  <tr>
    <th><strong>Company Name</strong></th>
    <th><strong>Contact Person</strong></th>
    <th><strong>Phone Number</strong></th>
    <th><strong>Email</strong></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @clients.each do |client| %>
    <tr>
      <td><%= link_to client.company_name, client_path(client.id)%></td>
      <td><%= client.contact_person_name %></td>
      <td><%= client.phone_number %></td>
      <td><%= client.email %></td>
      <td><%= link_to 'Quotations', quotations_path(:client_id => client.id, :status => ['Pending', 'Confirmed', 'Closed']), class: 'info' %></td>
      <td><%= link_to 'Invoices', quotations_path(:client_id => client.id, :status => ['Invoice']), class: 'info' %></td>
      <td><%= link_to 'Ledger', client_ledgers_path(client), class: 'info' %></td>
      <td><%= button_to 'Delete', client, {:onclick => "return confirm('WARNING : Are you sure to DELETE this Client ? All Quotations and payment details would be lost! You will not be able to UnDo this')", method: :delete}%></td>

    </tr>
  <% end %>
  </tbody>
</table>
<%= link_to 'New Client', new_client_path, class: :info %>
