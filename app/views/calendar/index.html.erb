<h1> Calendar </h1>
<% empty_date_lambda = lambda do |date| %>
  <%= link_to 'new', new_quotation_path(:event_date => date) %>
<% end %>

<%= calendar @all_quotations, empty_date: empty_date_lambda do |quotation| %>
  <div class="<%= quotation.status %>"><%= link_to quotation.name, quotation_item_details_path(quotation) %></div>
<% end %>
