<h1>Ledger</h1>
<p>
  Client name: <%= @client.company_name %>
</p>
<p>
  Client address: <%= @client.address %>
</p>
<p><%= link_to 'Add Payment', new_payment_path(:client_id => @client.id), class: 'info add-payment'%><br/></p>
<table class="table table-condensed table-striped table-bordered">
  <thead>
  <tr>
    <th>Date</th>
    <th>Description of Transaction</th>
    <th>Debit</th>
    <th>Credit</th>
    <th>Balance</th>
  </tr>
  </thead>

  <tbody>
  <% @ledger_details.each do |ledger_detail| %>
    <tr>
      <td><%= ledger_detail[:date].to_date.strftime("%d/%m/%Y") %></td>
      <td><%= ledger_detail[:description] %></td>
      <td><%= ledger_detail[:debit] %></td>
      <td><%= ledger_detail[:credit] %></td>
      <td><%= ledger_detail[:balance] %></td>
    </tr>
  <% end %>
  </tbody>
</table>

