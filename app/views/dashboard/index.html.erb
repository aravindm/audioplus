<div class="header">
  <h1>Dashboard</h1>
  <div class="headerAfter">
    <h2><%=DateTime.now.to_date.strftime("%d/%m/%Y")%></h2>
  </div>
</div>

<h2>List of upcoming events</h2>
<table class="table table-striped">
  <thead>
  <tr>
    <th><b>Event Date</b></th>
    <th><b>Client</b></th>
    <th><b>Event Name</b></th>
    <th><b>Day(s)</b></th>
  </tr>
  </thead>
  <tbody>
  <% @upcoming_quotations.each do |quotation| %>
    <tr>
      <td><%= quotation.event_date.strftime("%d/%m/%Y")%></td>
      <td><%= quotation.client.company_name %></td>
      <td><%= quotation.event_name %></td>
      <td><%= quotation.days %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<div>
  <h2>Pending Payments</h2>
  <table class="table table-striped">
    <thead>
    <tr>
      <th><b>Client Name</b></th>
      <th><b>Contact Person</b></th>
      <th><b>Phone Number</b></th>
      <th><b>Email</b></th>
      <th><b>Owes</b></th>
    </tr>
    </thead>
    <tbody>
    <% @pending_payments.each do |quotation| %>
      <tr>
        <td><%= quotation[:client].company_name %></td>
        <td><%= quotation[:client].contact_person_name %></td>
        <td><%= quotation[:client].phone_number %></td>
        <td><%= quotation[:client].email %></td>
        <!--<td><%= number_to_currency(quotation[:owes], locale: :in) %></td>-->
        <td><%=quotation[:owes]%></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
