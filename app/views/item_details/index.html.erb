<h1><%= @quotation.status == 'Confirmed' ? 'Invoice Details' : 'Quotation Details' %></h1>

<table class="table">
  <tr>
      <td><strong>Client name & Address:</strong></td>
      <td><p><%= @quotation.client.company_name %></p><p><%= @quotation.client.address %></p></td>
  </tr>

  <tr>
      <td><strong>Event name and Venue:</strong></td>
      <td><p><%= @quotation.name %></p><p><%= @quotation.venue %></p></td>
  </tr>

  <tr>
      <td><strong>Duration:</strong></td>
      <td><p><b><%= @quotation.event_date %></b> for <b><%= @quotation.days || 1 %></b> day(s)</p></td>
  </tr>

  <tr>
      <td><strong>Invoice Type:</strong></td>
      <td><p><%= @quotation.invoice_type %></p></td>
  </tr>
  <tr><td></td><td><p></p></td></tr>
  </table>
<p>
  <%= link_to 'Edit', edit_quotation_path(@quotation), class: 'edit' %>
</p>
<br/>

<div class="row">
  <div class="col-md-8">
    <table class="table table-condensed table-striped table-bordered">
      <thead>
      <tr>
        <th><strong>Sl. No.</strong></th>
        <th><strong>Particulars</strong></th>
        <th><strong>Quantity</strong></th>
        <th><strong>Days</strong></th>
        <th><strong>Price</strong></th>
        <th></th>
        <th></th>
      </tr>
      </thead>

      <tbody>
      <% @item_details.each_with_index do |item_detail, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= item_detail.particulars %></td>
          <td><%= item_detail.quantity %></td>
          <td><%= item_detail.days %></td>
          <td><%= item_detail.price %></td>
          <td><%= link_to 'Edit', edit_quotation_item_detail_path(@quotation, item_detail), class: 'edit' %></td>
          <td><%= link_to 'Delete', [@quotation, item_detail], method: :delete, data: {confirm: 'Are you sure?'}, class: 'destroy' %></td>
        </tr>
      <% end %>
      <tr>
        <td><strong>Total:</strong></td>
        <td></td>
        <td></td>
        <td></td>
        <!--<td><%= number_to_currency(@quotation.total_price, locale: :in) %></td> Not working in Windows-->
        <td><%=@quotation.total_price%></td>
      </tr>
      </tbody>
    </table>
  </div>
  <div class="col-md-3 cold-md-offset-1">
    <table class="table table-condensed table-striped table-bordered col-md-3 col-md-offset-1">
      <thead>
      <tr>
        <th><strong>Vendor</strong></th>
        <th><strong>Amount</strong></th>
      </tr>
      </thead>
      <tbody>
      <% @item_details.each_with_index do |item_detail| %>
        <tr>
          <td><%= item_detail.payment ? item_detail.payment.client.company_name : '-' %></td>
          <td><%= item_detail.payment ? item_detail.payment.amount : '' %></td>
        </tr>
      <% end %>
      </table>
  </div>
</div>

<p>
  <%= link_to 'New Item detail', new_quotation_item_detail_path(@quotation), class: 'default' %>
  <%= link_to 'Print', quotation_print_quotations_path(@quotation), class: 'default' %>
</p>
