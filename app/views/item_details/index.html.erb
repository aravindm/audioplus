<h1>Listing item_details</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Decimal</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @item_details.each do |item_detail| %>
      <tr>
        <td><%= item_detail.name %></td>
        <td><%= item_detail.description %></td>
        <td><%= item_detail.price %></td>
        <td><%= item_detail.decimal %></td>
        <td><%= link_to 'Show', quotation_item_detail_path(@quotation, item_detail) %></td>
        <td><%= link_to 'Edit', edit_quotation_item_detail_path(@quotation, item_detail) %></td>
        <td><%= link_to 'Destroy', [@quotation, item_detail], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

