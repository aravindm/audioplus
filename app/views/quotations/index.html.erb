<h1>
  <%= if params[:status].nil? then
        'Quotations'
      else
        params[:status].include?('Confirmed') ? 'Invoices' : 'Quotations'
      end %>
  <% if !@client.nil? %>
    for <i><%= @client.company_name %></i>
  <% end %>
</h1>
<br>

<table class="table table-striped">
  <thead>
  <tr>
    <th><strong>Name</strong></th>
    <th><strong>Event Date</strong></th>
    <th><strong>Status</strong></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @quotations.each do |quotation| %>
    <tr>
      <td><%= quotation.name %></td>
      <td><%= quotation.event_date %></td>
      <td><%= quotation.status %></td>
      <td><%= link_to 'Show Details', quotation_item_details_path(quotation), class: 'info' %></td>
      <!--<td><%= link_to 'Delete', quotation, method: :delete, data: {confirm: 'Are you sure?'}, class: 'destroy' %></td> Delete not needed -->
    </tr>
  <% end %>
  </tbody>
</table>
<% if @client.nil? %>
  <%= link_to 'New Quotation', new_quotation_path(), class: 'info' %>
<% else %>
  <%= link_to 'New Quotation', new_quotation_path(client_id: @client.id), class: 'info' %>
<% end %>