<h1>Quotations</h1>

<h2>
   <p>Client name:
     <%= @client.name %>
   </p>
</h2>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Event Date</th>
      <th>Status</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @quotations.each do |quotation| %>
      <tr>
        <td><%= quotation.name %></td>
        <td><%= quotation.event_date %></td>
        <td><%= quotation.status %></td>
        <td><%= link_to 'Show', quotation_item_details_path(quotation) %></td>
        <td><%= link_to 'Edit', edit_client_quotation_path(@client, quotation) %></td>
        <td><%= link_to 'Delete', [@client, quotation], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= link_to 'New Quotation', new_client_quotation_path(@client) %>
<%= link_to 'Back to all Clients', clients_path %>
