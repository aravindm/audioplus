<h1>Quotations
  <% if !@client.nil? %>
    for <i><%= @client.name %></i>
  <% end %>
</h1>
<br>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Name</th>
    <th>Event Date</th>
    <th>Status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @quotations.each do |quotation| %>
    <tr>
      <td><%= quotation.name %></td>
      <td><%= quotation.event_date %></td>
      <td><%= quotation.status %></td>
      <td><%= link_to 'Show', quotation_item_details_path(quotation), class: 'info' %></td>
      <td><%= link_to 'Edit', edit_quotation_path(quotation), class: 'edit' %></td>
      <td><%= link_to 'Delete', quotation, method: :delete, data: {confirm: 'Are you sure?'}, class: 'destroy' %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<br>

<%= link_to 'New Quotation', new_quotation_path %>
<%= link_to 'Back to all Clients', clients_path %>
