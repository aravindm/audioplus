<h1>Payments</h1>

<div class="actions" style="text-align: right;">
  <%= link_to 'Add New Payment', new_payment_path, class: :new %>
</div>

<table class="table table-striped">
  <thead>
  <tr>
    <th><strong>Client</strong></th>
    <th><strong>Description</strong></th>
    <th><strong>Mode</strong></th>
    <th><strong>Paid on</strong></th>
    <th><strong>Amount</strong></th>
    <th><strong>Type</strong></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @payments.each do |payment| %>
    <tr>
      <td><%= payment.client.company_name %></td>
      <td><%= payment.description %></td>
      <td><%= payment.mode %></td>
      <td><%= payment.paid_on%></td>
      <td><%= payment.amount %></td>
      <td><%= payment.payment_type %></td>
      <td><%= link_to 'Show Details', payment, class: :info %></td>
      <td><%= button_to 'Delete', payment, {:onclick => "return confirm('WARNING : Are you sure to DELETE this Payment Permanently? You will not be able to UnDo this')", :method=>:delete} %></td>

    </tr>
  <% end %>
  </tbody>
</table>

<br>
